1. adding primary key
-- provide constraint name
ALTER TABLE emp2
ADD CONSTRAINT emp2_pk PRIMARY KEY(employee_id);
--without constraint name
ALTER TABLE emp2
MODIFY employee_id PRIMARY KEY ---here the constraint name will be sys_cn%

--check the constraint
SELECT * FROM USER_CONSTRAINTS
WHERE TABLE_NAME = 'emp2';

--drop the constraint 
ALTER TABLE emp2
DROP CONSTRAINT &CON_NAME;

ALTER TABLE emp2
DROP PRIMARY KEY CASCADE; --it will drop all the related constraints

2. adding the foreign key
--provide constraint name
ALTER TABLE emp2
ADD CONSTRAINT emp2_fk_dept FOREIGN KEY(department_id) REFERENCES dept2(department_id);
--without name
ALTER TABLE emp2
MODIFY department_id REFERENCES dept2(department_id);

3. adding NOT NULL constraint
--this will work only if the table is empty or the column has value for all rows
ALTER TAVLE emp2
MODIFY first_name NOT NULL;

4. rename the column name
ALTER TABLE emp2
RENAME COLUMN first_name TO fname;

5. rename the constraint name
ALTER TABLE emp2
RENAME CONSTRAINT emp2_pk TO new_emp2_pk;

6. DISABLE and ENABLE CONSTRAINTS
ALTER TABLE emp2 
DISABLE CONSTRAINT emp2_pk;

ALTER TABLE emp2
ENABLE CONSTRAINT emp2_pk;

ALTER TABLE emp2
DISABLE CONSTRAINT emp2_pk CASCADE;



